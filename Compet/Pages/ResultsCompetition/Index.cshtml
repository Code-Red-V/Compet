@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ResultsCompititions[0].Discipline)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ResultsCompititions[0].Participant)
            </th>
            <th></th>
        </tr>
    </thead>
